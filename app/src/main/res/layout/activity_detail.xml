<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:androidApplication="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.maunorafiq.pawangcuaca.detail.DetailActivity">

    <TextView
        android:text="1017.56 hPa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvPressureVal"
        android:textSize="26sp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/tvTemperatureVal"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Humidity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvHumidity"
        android:layout_below="@+id/tvHumidityVal"
        android:layout_alignStart="@+id/tvHumidityVal" />

    <TextView
        android:text="98%"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvHumidityVal"
        android:textSize="26sp"
        android:layout_below="@+id/tvPressure"
        android:layout_alignParentStart="true" />

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/progressBar" />

    <Button
        android:text="Reload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnReload"
        android:layout_below="@+id/tvError"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Error occur!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvError"
        android:textSize="24sp"
        android:layout_alignBaseline="@+id/tvHumidityVal"
        android:layout_alignBottom="@+id/tvHumidityVal"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        androidApplication:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/ivIcon"
        android:scaleType="fitXY"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="13dp"
        android:layout_alignTop="@+id/tvTemperatureVal"
        android:layout_alignParentEnd="true" />

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rvWeatherForecast"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvHumidity"
        android:layout_marginTop="10dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvDescription"
        android:textSize="30sp"
        android:layout_below="@+id/tvLocation"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Loading . ."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvLocation"
        android:textSize="40sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Pressure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvPressure"
        android:layout_below="@+id/tvPressureVal"
        android:layout_alignParentStart="true" />

    <TextView
        android:text='30"C'
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvTemperatureVal"
        android:textSize="90sp"
        android:layout_below="@+id/tvDescription"
        android:layout_alignParentStart="true" />
</RelativeLayout>
