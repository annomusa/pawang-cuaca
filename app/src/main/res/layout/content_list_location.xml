<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:androidApplication="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_list_location"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    androidApplication:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.maunorafiq.pawangcuaca.list.ListLocationActivity"
    tools:showIn="@layout/activity_list_location">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/list_location"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

</android.support.v4.widget.SwipeRefreshLayout>
